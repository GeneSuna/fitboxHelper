{
  "manifest_version": 3,
  "name": "fitbox Helper",
  "version": "0.2.0",
  "description": "Provides voice-interactive AI assistance for the fitbox application.",
  "permissions": [
    "identity",
    "tabs",
    "scripting",
    "offscreen",
    "declarativeContent",
    "desktopCapture",
    "tts"
  ],
  "host_permissions": [
    "*://*.fitbox.iq/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "fitbox Helper",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "offscreen": {
    "reasons": ["USER_MEDIA"],
    "justification": "Capture tab audio stream via getUserMedia for speech processing.",
    "path": "offscreen.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "mic-test.html", "mic-test.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
